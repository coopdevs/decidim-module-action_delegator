<p class="email-greeting">
  <%= raw t("greeting", scope: "decidim.action_delegator.invite_participants_mailer.confirmation", recipient: @user.email) %>
</p>

<p class="email-instructions">
  <%= t("body", scope: "decidim.action_delegator.invite_participants_mailer.confirmation") %>
</p>

<p class="email-button email-button__cta">
  <%= link_to t("confirm", scope: "decidim.action_delegator.invite_participants_mailer.confirmation"),
              accept_invitation_url(@resource,
                                    invitation_token: @token,
                                    invite_redirect: decidim.root_path,
                                    host: @resource.organization.host) %>
</p>
